<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="horizontal"
        android:weightSum="9">

        <LinearLayout
            android:layout_weight="@integer/pv_layout_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/pv_iv_gallary"
                android:layout_margin="@dimen/pv_mst_tp_img_mrgn"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pv_msg_tp_iv_height"
                android:src="@drawable/icon_gallary"/>

            <ImageView
                android:id="@+id/pv_iv_location"
                android:layout_margin="@dimen/pv_mst_tp_img_mrgn"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pv_msg_tp_iv_height"
                android:src="@drawable/icon_location"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="@integer/pv_layout_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/pv_iv_camera"
                android:layout_margin="@dimen/pv_mst_tp_img_mrgn"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pv_msg_tp_iv_height"
                android:src="@drawable/icon_camera"/>

            <ImageView
                android:layout_margin="@dimen/pv_mst_tp_img_mrgn"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pv_msg_tp_iv_height"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="@integer/pv_layout_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/pv_iv_video"
                android:layout_margin="@dimen/pv_mst_tp_img_mrgn"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pv_msg_tp_iv_height"
                android:src="@drawable/icon_video"/>

            <ImageView
                android:layout_margin="@dimen/pv_mst_tp_img_mrgn"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pv_msg_tp_iv_height"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>